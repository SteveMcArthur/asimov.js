@import "asimovColors.styl"
@import url("http://fonts.googleapis.com/css?family=Signika:400,600,700")

*
  margin: 0
  padding: 0

body
  text-align: center
  background-color: $lighter
  font-family: "Signika", "Helvetica Neue", "Helvetica", "Arial", Sans-Serif
  color: $dark
  line-height: 1.5
  font-size: 1.6em
  margin: 100px auto
  max-width: 600px

  @media screen and (max-width: 600px)
    margin 40px

a
  color: $dark
  text-decoration: none
  font-weight: 600

  &:hover
    color: $darker

p
  margin-bottom: 20px

h1
  margin-top 15%
  margin-bottom 5%
  font-size 60px
  font-weight 300
  color $accent

  .name
    font-weight: 700

  @media screen and (max-width: 600px)
    font-size 40px

.footer
  font-size: 1em
  position: fixed
  bottom: 20px
  left: 0
  right: 0